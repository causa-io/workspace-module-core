{
  "name": "@causa/workspace-core",
  "version": "0.27.0",
  "description": "The Causa workspace module providing core function definitions and some implementations.",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/causa-io/workspace-module-core.git"
  },
  "license": "ISC",
  "type": "module",
  "engines": {
    "node": ">=20"
  },
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "exports": {
    ".": "./dist/index.js",
    "./backfill": "./dist/backfill/index.js",
    "./code-generation": "./dist/code-generation/index.js",
    "./services": "./dist/services/index.js"
  },
  "files": [
    "dist/",
    "LICENSE.md",
    "package.json",
    "README.md"
  ],
  "scripts": {
    "prebuild": "rimraf ./dist",
    "build": "tsc -p tsconfig.build.json",
    "postbuild": "node transform-schemas.mjs",
    "format": "prettier --write \"src/**/*.ts\"",
    "lint": "eslint \"src/**/*.ts\"",
    "test": "NODE_OPTIONS=\"--experimental-vm-modules --no-warnings=ExperimentalWarning\" jest",
    "test:cov": "npm run test -- --coverage",
    "typecheck": "tsc --noEmit",
    "generateConfigurationSchemas": "cs model genCode && perl -pi -e 's|\\@causa/runtime|\\@causa/workspace/validation|g' src/configurations/generated.ts"
  },
  "dependencies": {
    "@causa/cli": ">= 0.6.5 < 1.0.0",
    "@causa/workspace": ">= 0.22.1 < 1.0.0",
    "@scalar/json-magic": "^0.11.0",
    "@scalar/openapi-parser": "^0.24.9",
    "axios": "^1.13.5",
    "class-validator": "^0.14.3",
    "globby": "^16.1.0",
    "js-yaml": "^4.1.1",
    "micromatch": "^4.0.8",
    "pino": "^10.3.1",
    "quicktype-core": "^23.2.6"
  },
  "devDependencies": {
    "@scalar/openapi-types": "^0.5.3",
    "@swc/core": "^1.15.11",
    "@swc/jest": "^0.2.39",
    "@tsconfig/node20": "^20.1.9",
    "@types/jest": "^30.0.0",
    "@types/js-yaml": "^4.0.9",
    "@types/micromatch": "^4.0.10",
    "@types/node": "^20.19.33",
    "eslint": "^9.39.2",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-prettier": "^5.5.5",
    "jest": "^30.2.0",
    "jest-extended": "^7.0.0",
    "rimraf": "^6.1.2",
    "ts-node": "^10.9.2",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.55.0"
  }
}
